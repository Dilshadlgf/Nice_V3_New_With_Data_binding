<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/niceappbg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_nice"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/logosplash"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold_700"
                            android:gravity="center"
                            android:text="@string/agri_expert_login"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/ract_green">

                        <RelativeLayout
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ract_green">

                            <TextView
                                android:id="@+id/tvselect"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/poppinsregular_400"
                                android:text="@string/selectlang"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/header"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/layenglish"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/selector_dot_border_rect"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:tag="en">

                                <ImageView
                                    android:id="@+id/ivenglish"
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/deselecteng"
                                    android:visibility="visible" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layhindi"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/selector_dot_border_rect"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:tag="hi">

                                <ImageView
                                    android:id="@+id/ivhindi"
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/deselecthindi"
                                    android:visibility="visible" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/laymarathi"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/selector_dot_border_rect"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:tag="mr">

                                <ImageView
                                    android:id="@+id/ivmarathi"
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/deselectmarathi" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/laytamil"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/selector_dot_border_rect"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:tag="ta">

                                <ImageView
                                    android:id="@+id/ivtamil"
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/deselecttamil" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_aganwadi_helpdesk_cntnt"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/white_ractangle_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/et_user_img"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/usericon" />

                            <ImageView
                                android:id="@+id/et_pswd_user_img"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/password"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/et_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="#00000000"
                                android:ems="10"
                                android:fontFamily="@font/poppinsregular_400"
                                android:hint="@string/Enter_User_Name"
                                android:maxLength="50"
                                android:singleLine="true"
                                android:textColor="@color/greytext"
                                android:textColorHint="@color/color_hint"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/white_ractangle_border"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/et_user_img2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/usericon" />

                            <ImageView
                                android:id="@+id/et_pswd_user_img2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/password"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:background="#00000000"
                                android:fontFamily="@font/poppinsregular_400"
                                android:hint="@string/Enter_Password"
                                android:inputType="textPassword"
                                android:maxLength="50"
                                android:paddingBottom="@dimen/_10sdp"
                                android:privateImeOptions="nm"
                                android:textColor="@color/greytext"
                                android:textColorHint="@color/color_hint"
                                android:textSize="16sp"
                                android:visibility="visible" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@color/dark_green"
                            android:fontFamily="@font/poppinsregular_400"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textFontWeight="600" />

                        <Button
                            android:id="@+id/btn_registration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@color/dark_green"
                            android:fontFamily="@font/poppinsregular_400"
                            android:text="@string/registeratn"
                            android:textColor="@color/white"
                            android:textFontWeight="600" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/youtubeimg"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/youtub" />

                            <ImageView
                                android:id="@+id/manualimg"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:src="@drawable/manual" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgchat"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:src="@drawable/chatbot_icon" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>
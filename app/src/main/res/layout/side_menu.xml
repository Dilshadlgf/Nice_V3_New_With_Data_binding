<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_gravity="center"
            android:layout_marginTop="@dimen/_70sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/layenglish"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivenglish"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/englishimg"
                    android:visibility="visible" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/layhindi"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivhindi"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/hindiimg"
                    android:visibility="visible" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/laymarathi"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivmarathi"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/mararthiimg" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/laytamil"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivtamil"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/tamilimg" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layout_dashboard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/border"/>
            <ImageView
                android:id="@+id/ivdashboard"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvhome"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_toRightOf="@id/ivdashboard"
                android:fontFamily="@font/poppinsbold_700"
                android:textFontWeight="900"
                android:text="Home"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"
            android:layout_marginTop="@dimen/_40sdp"/>
        <RelativeLayout
            android:id="@+id/layout_myevent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivevent"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivevent"
                android:fontFamily="@font/poppinsbold_700"
                android:text="@string/myevent"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"
            android:visibility="visible"/>
        <RelativeLayout
            android:id="@+id/layout_myprofile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:visibility="visible">
            <ImageView
                android:id="@+id/ivprofile"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvmyprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivprofile"
                android:fontFamily="@font/poppinsbold_700"
                android:text="My Profile"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
        <RelativeLayout
            android:id="@+id/layout_bluetoothdevice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivdevice"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvbluetoothdevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivdevice"
                android:fontFamily="@font/poppinsbold_700"
                android:text="@string/bluetooth_devices"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>

        <RelativeLayout
            android:id="@+id/layout_aidlocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivaidlocatn"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvaidlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivaidlocatn"
                android:fontFamily="@font/poppinsbold_700"
                android:text="@string/aidlocation"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
        <RelativeLayout
            android:id="@+id/layout_offline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivoffline"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvoffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivoffline"
                android:fontFamily="@font/poppinsbold_700"
                android:text="@string/CommonContent"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
        <RelativeLayout
            android:id="@+id/layout_currentweather"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivcurrentweather"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvcurrentweather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivcurrentweather"
                android:fontFamily="@font/poppinsbold_700"
                android:text="@string/currentweather"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
        <RelativeLayout
            android:id="@+id/layout_weatheralert"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivweather"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvweather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivweather"
                android:fontFamily="@font/poppinsbold_700"
                android:text="@string/commonquery"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivlang"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvlanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivlang"
                android:fontFamily="@font/poppinsbold_700"
                android:text="Notification"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/youtubeimg"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/youtube" />

            <ImageView
                android:id="@+id/manualimg"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/manualimg" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_chatbod"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvchatboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold_700"
                android:text="Help"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:visibility="gone"
            android:background="@color/border"/>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/layout_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivlogout"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvlogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivlogout"
                android:fontFamily="@font/poppinsbold_700"
                android:text="Logout"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/border"/>
    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="right">

        <TextView
            android:id="@+id/tvversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinsbold_700"
            android:text="@string/version"
            android:textColor="@color/white"
            android:textFontWeight="900"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>
</RelativeLayout>
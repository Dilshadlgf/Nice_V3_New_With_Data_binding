<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mydata"
            type="com.example.testproject.model.DataModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomlayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">


                <RelativeLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bckg2"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:id="@+id/layout_s_h"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp">

                        <RelativeLayout
                            android:id="@+id/iv_lay"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/querybackground">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/todo"
                                android:src="@drawable/query_one" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_toRightOf="@+id/iv_lay"
                            android:text="Query"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/layout_s_h">


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_3sdp">

                        <RelativeLayout
                            android:id="@+id/layout_calander"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/querybackground">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/date_1" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toRightOf="@id/layout_calander"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Date"
                                android:textColor="#ffc700"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/txt_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/aldrich"
                                android:text="08-04-2022"
                                android:textColor="@color/black"
                                android:textFontWeight="300"
                                android:textSize="@dimen/_8sdp" />

                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txtQuery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinslight_300"
                        android:text="@{mydata.query}"
                        android:gravity="start"
                        android:justificationMode="inter_word"
                        android:minHeight="@dimen/_50sdp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8sdp" />
                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_below="@id/txtQuery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:orientation="vertical" />
                    <LinearLayout
                        android:id="@+id/lay_solution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageContainer"
                        android:background="@drawable/round_rect"
                        android:orientation="vertical"
                        android:visibility="gone"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:fontFamily="@font/poppinsbold_700"
                            android:text="@string/Solution"
                            android:textColor="@color/colorPrimaryDark"
                            android:textFontWeight="700"
                            android:textSize="@dimen/_8sdp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:background="@color/graycolor"
                            />

                        <TextView
                            android:id="@+id/txtSolution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtQuery"
                            android:text="@{mydata.solution}"
                            android:fontFamily="@font/poppinslight_300"
                            android:gravity="start"
                            android:justificationMode="inter_word"
                            android:minHeight="@dimen/_50sdp"
                            android:padding="15dp"
                            android:textColor="@color/black"
                            android:textFontWeight="300"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>
                </RelativeLayout>





            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_70sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="@color/graycolor">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">


                    <LinearLayout
                        android:id="@+id/lay_crated_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@color/graycolor"
                        android:visibility="visible"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:background="@drawable/circle_green" />

                            <TextView
                                android:id="@+id/text_createdby"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="Created by -"
                                android:textColor="@color/black_trans"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/txt_created_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:fontFamily="@font/aldrich"
                                android:text="@{mydata.ref.createdByFarmer.name}"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lay_crated_by"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@color/graycolor"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circle_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:text="Addr. of Creator-"
                            android:textColor="@color/black_trans"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:fontFamily="@font/aldrich"
                            android:text=""
                            android:textFontWeight="400"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_resolved_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lay_address"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/graycolor"
                        android:visibility="gone"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:background="@drawable/circle_green" />

                            <TextView
                                android:id="@+id/txt_assign_to"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="Solution by -"
                                android:textColor="@color/black_trans"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/txt_resolved_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:fontFamily="@font/aldrich"
                                android:text="@{mydata.ref.createdByFarmer.name}"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:background="@drawable/green_shap" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="Date -"
                                android:textColor="@color/black_trans"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/txt_resolved_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:fontFamily="@font/aldrich"
                                android:text=""
                                android:textFontWeight="400"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>
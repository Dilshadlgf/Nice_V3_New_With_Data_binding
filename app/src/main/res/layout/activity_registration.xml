                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_lyout"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <!--    <ListView
                            android:id = "@+id/list"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"/>
    -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_pswd_user_iimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/orgnization" />

                        <TextView
                            android:id="@+id/sp_organization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:text="GIZ"
                            android:textColor="@color/white"
                            android:textSize="16sp">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border">

                        <ImageView
                            android:id="@+id/et_pswd_user_img"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/usericon" />

                        <EditText
                            android:id="@+id/et_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:background="@null"
                            android:fontFamily="@font/aldrich"
                            android:hint="@string/enter_fullname"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/lytgrey"
                            android:textFontWeight="300"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/voice_to_txt"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/mike"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/et_pswd_user_imgg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/usericon" />
                        <!--android:fontFamily="@font/montserratthin"-->
                        <EditText
                            android:id="@+id/et_father_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:background="@null"
                            android:fontFamily="@font/aldrich"
                            android:hint="@string/enter_fathername"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/lytgrey"
                            android:textFontWeight="300"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/calene" />
                        <!--android:fontFamily="@font/montserratthin"-->
                        <Button
                            android:id="@+id/et_dob_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="60dp"
                            android:background="@null"
                            android:fontFamily="@font/aldrich"
                            android:gravity="center_vertical|start"
                            android:hint="Enter Date Of Birth"
                            android:inputType="date"
                            android:textColor="@color/black"
                            android:textColorHint="@color/lytgrey"
                            android:textFontWeight="300"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_imgemail"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/mobile" />

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:background="@null"
                            android:fontFamily="@font/aldrich"
                            android:hint="@string/enter_email"
                            android:inputType="textEmailAddress"
                            android:maxLength="20"
                            android:textColor="@color/greytext"
                            android:textColorHint="@color/lytgrey"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/et_pswd_user_iiimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/gender" />

                        <Spinner
                            android:id="@+id/sp_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:src="@drawable/dropdown1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_pswd_useir_iiiimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/location" />

                        <Spinner
                            android:id="@+id/sp_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:src="@drawable/dropdown1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"

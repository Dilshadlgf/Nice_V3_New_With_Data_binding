                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_pswd_urser_iiiiimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/district" />

                        <Spinner
                            android:id="@+id/sp_district"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:src="@drawable/dropdown1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_pswd_uyser_iiiimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:src="@drawable/blocks" />

                        <Spinner
                            android:id="@+id/sp_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:background="@null" />

                        <ImageView
                            android:id="@+id/imgdropdwnblok"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/imgaddblok"

                            android:src="@drawable/dropdown1"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/imgaddblok"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/addgreen2"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_pswd_user_iiiimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/grampanchayat" />

                        <Spinner
                            android:id="@+id/sp_grampanchayat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:background="@null" />

                        <ImageView
                            android:id="@+id/imgdrpdwngram"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/imgaddgram"
                            android:src="@drawable/dropdown1"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/imgaddgram"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/addgreen2"
                            android:visibility="invisible" />

                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/et_psfwd_user_img"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/mobile" />

                        <EditText
                            android:id="@+id/et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/aldrich"
                            android:hint="@string/Enter_your_Mobile_number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/lytgrey"
                            android:textFontWeight="300"
                            android:textSize="@dimen/_11sdp"
                            tools:ignore="TouchTargetSizeCheck" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/mob_exits_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number Already Registered"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/redcolor"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"

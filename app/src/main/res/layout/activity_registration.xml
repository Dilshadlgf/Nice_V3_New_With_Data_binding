                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/et_pswd_user_iiiiimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/village" />

                        <Spinner
                            android:id="@+id/sp_village"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:background="@null" />

                        <ImageView
                            android:id="@+id/imgdropdwnvill"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/imgaddvill"
                            android:src="@drawable/dropdown1"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/imgaddvill"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/addgreen2"
                            android:visibility="invisible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:button="@drawable/chechbox_custome"
                            android:checked="true"
                            android:scaleX="0.6"
                            android:scaleY="0.6" />

                        <TextView
                            android:id="@+id/tvagree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="-15dp"
                            android:layout_toRightOf="@id/checkBox"
                            android:fontFamily="@font/aldrich"
                            android:text="@string/agree"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <CheckBox
                            android:id="@+id/checkBox_W_OTP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:button="@drawable/chechbox_custome"
                            android:checked="false"
                            android:scaleX="0.6"
                            android:scaleY="0.6" />

                        <TextView
                            android:id="@+id/txtWithOtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="-15dp"
                            android:layout_toRightOf="@id/checkBox_W_OTP"
                            android:fontFamily="@font/aldrich"
                            android:text="Registration With OTP"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnotp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ract_green"
                        android:fontFamily="@font/aldrich"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/agree"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnsave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ract_green"
                        android:text="Register"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/otp_lyout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_ractangle_border"
                        android:padding="2dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/et_otp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/password" />

                        <EditText
                            android:id="@+id/et_otp_pswd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:background="@null"
                            android:hint="Enter Otp"
                            android:inputType="number"
                            android:textColor="@color/greytext"
                            android:textColorHint="@color/lytgrey"
                            android:textSize="13sp" />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/submitOtpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ract_green"
                        android:text="@string/registeratn"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/ract_green"
                        android:fontFamily="@font/aldrich"
                        android:inputType="textCapSentences"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:visibility="gone"
                        android:textSize="@dimen/_12sdp" />
